############## DAY 15 ######################################################

########### BITWISE OPERATORS ##############################################


############## BITWISE AND #################################################

#include<iostream>
using namespace std;
int main(){
    int a=3,b=7;
    cout<<(a&b)<<endl;
    return 0;
}

##############################################################################

####### LEFT SHIFT BITWISE OPERATOR #########################################

#include<iostream>
using namespace std;
int main(){
    cout<<(4<<1)<<endl;
    return 0;
}
