################ Sum Of Two Numbers Code #####################################################################################


#include <iostream>
using namespace std;
int main(){
    int a,b;
    cout<<"enter a:"<<endl;
    cin>>a;
    cout<<"enter b:"<<endl;
    cin>>b;

    int sum=a+b;
    cout<<"Sum="<<sum<<endl;


    return 0;
}

