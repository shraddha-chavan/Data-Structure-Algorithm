####################### DAY 7 #############################

############ TRIANGLE PATTERNS ############################

1) CHARACTER TRIANGLE PATTERN

#include<iostream>
using namespace std;
int main(){
    char ch='A';
    int i,j,n=4;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=1;j++ ){
            cout<<ch<<" ";
        }
        ch++;
        cout<<endl;
    }


    return 0;
}

#################################################################

2) No. TRIANGLE PATTERN

#include<iostream>
using namespace std;
int main(){
    int i,j,n=4;
    for(int i=0;i<n;i++){
        for(int j=0;j<i+1;j++ ){
            cout<<(i+1);
        }
        cout<<endl;
    }


    return 0;
}

###################################################################

3)STAR TRIANGLE PATTERN

#include<iostream>
using namespace std;
int main(){
    int i,j,n=4;
    for(int i=0;i<n;i++){
        for(int j=0;j<i+1;j++ ){
            cout<<"*";
        }
        cout<<endl;
    }


    return 0;
}

