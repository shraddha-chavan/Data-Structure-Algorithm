####################### DAY 7 #############################

############ TRIANGLE PATTERNS ############################

1) CHARACTER TRIANGLE PATTERN

#include<iostream>
using namespace std;
int main(){
    char ch='A';
    int i,j,n=4;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=1;j++ ){
            cout<<ch<<" ";
        }
        ch++;
        cout<<endl;
    }


    return 0;
}

