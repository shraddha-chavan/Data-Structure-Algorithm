################################### DAY 3 ############################################################

################################ IF-ELSE STATEMENT ###################################################
1)
#include<iostream>
using namespace std;
int main(){

    int n=-45;
    if(n>=0) {
        cout<<"n is positive\n";
    }
    else{
        cout<<"n is negative\n";
    }

    return 0;
}

########################################################################################################

2)
#include<iostream>
using namespace std;
int main(){

    int n;
    cout<<"enter age="<<endl;
    cin>>n;
    if(n>=18) {
        cout<<"can vote\n";
    }
    else{
        cout<<"cannot vote\n";
    }

    return 0;
}

