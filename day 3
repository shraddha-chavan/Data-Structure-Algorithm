################################### DAY 3 ############################################################

################################ IF-ELSE STATEMENT ###################################################
1)
#include<iostream>
using namespace std;
int main(){

    int n=-45;
    if(n>=0) {
        cout<<"n is positive\n";
    }
    else{
        cout<<"n is negative\n";
    }

    return 0;
}

########################################################################################################

2)
#include<iostream>
using namespace std;
int main(){

    int n;
    cout<<"enter age="<<endl;
    cin>>n;
    if(n>=18) {
        cout<<"can vote\n";
    }
    else{
        cout<<"cannot vote\n";
    }

    return 0;
}

#########################################################################################################

################################ LOWERCASE & UPPERCASE ##################################################

#include<iostream>
using namespace std;
int main(){
    char ch;
    cout<<"Enter character="<<endl;
    cin>>ch;
    if(ch>='a'&& ch<='z'){
        cout<<"Is Lowercase\n";
    }
    else{
        cout<<"Is Uppercase\n";
    }
    return 0;
}

#########################################################################################################

######################## ODD EVEN NUMBER ################################################################

#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a no.="<<endl;
    cin>>n;
    if(n%2==0){
        cout<<"even"<<endl;

    }
    else{
        cout<<"odd"<<endl;
    }
}
###########################################################################################################

############## STUDENT MARKS GRADE CODE ###################################################################

#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter marks of student=\n";
    cin>>n;

    if(n>=90){
        cout<<"Grade A"<<endl;
        cout<<"Excellet"<<endl;

    }
    else if(n>=80){
        cout<<"Grade B"<<endl;
        cout<<"Very Good"<<endl;
    }
    else if(n>=70){
        cout<<"Grade C"<<endl;
        cout<<"Good"<<endl;
    }
    else if(n>=60){
        cout<<"Grade D"<<endl;
        cout<<"Need Improvement"<<endl;
    }
    else{
        cout<<"Fail"<<endl;
    }
    

    return 0;
}

###################################################################################################

################## WITH ASCII CHARACTERS LOWERCASE & UPPERCASE ####################################

#include<iostream>
using namespace std;
int main(){
    char ch;
    cout<<"Enter a Character="<<endl;
    cin>>ch;
    if(ch>=65&&ch<=90){
        cout<<"Is Uppercase"<<endl;
    }
    else{
        cout<<"Is Lowercase"<<endl;

    }
    return 0;
}

