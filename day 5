#############################################################################

############## FOR LOOP ####################################################

#include<iostream>
using namespace std;
int main(){
    int n=5;
    for(int i=1;i<=5;i++){
        cout<<i<<" ";
    }

    return 0;
}
##########################################################################

################### NESTED LOOP ##########################################

#include<iostream>
using namespace std;
int main(){
    int n=5;
    for(int i=1;i<=n;i++){
        int s=5;
        for(int i=1;i<=s;i++){
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
// 1st for loop indicated that what should in rows and
//  2nd for loop indicates that what should be in columns

########################################################################

################ SUM OF ODD No. FROM 1 TO N ###########################

#include<iostream>
using namespace std;
int main(){
    int n=5,sum=0;
    for(int i=1;i<=n;i++){
        if(i%2!=0){
            sum+=i;
        }
        
    }
    cout<<"sum of odd no.="<<sum<<endl;

    return 0;
}

###########################################################################

########### SUM OF N No. USING FOR LOOP ###################################

#include<iostream>
using namespace std;
int main(){
    int i=1,sum=0,n=10;
    for(int i=1;i<=n;i++){
        sum+=i;
    }
    cout<<"sum="<<sum<<endl;

    return 0;
}

