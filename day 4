############################### DAY 4 ################################################################

########################### DO-WHILE LOOP ###########################################################

#include<iostream>
using namespace std;
int main(){
    int n=5,i=1;
    do{
        cout<<i<<" ";
        i++;
    }
    while(i<=n);

    cout<<endl;
    return 0;
}

####################################################################################################

######################## FACTORIAL OF N NUMBERS ####################################################

#include<iostream>
using namespace std;
int main(){
    int n=5,fact=1,i=1;
    while(i<=n){
        fact *=i;
        i++;


    }
    cout<<"Fctorial of "<< n <<" is "<<fact<<endl;

    return 0;
}
