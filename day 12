#################### DAY 12 ##############################

########### PYRAMID PATTERN ############################

#include<iostream>
using namespace std;
int main(){
    int n=8;
    for(int i=0;i<0;i++){
        // space :n-i-1
        for(int j=0;j<n-i-1;j++){
            cout<< " ";
        }
        // nums1 :i-1
        for(int j=1;j<=1;j++){
            cout<<j;
        }
        // nums2
        for(int j=1;j>0;j--){
            cout<< j;
        }
        cout<<endl;
    }

    return 0;
}


###############################################################

########## CALCULATE SUM OF DIGITS ############################

#include<iostream>
using namespace std;
int sumOfDigits(int num){
    int digSum=0;
    while(num>0){
        int lastDig=num%10;
        num/=10;
        digSum+=lastDig;

    }
    return digSum;
}
int main(){
    cout<<"sum="<<sumOfDigits(2356)<<endl;


    return 0;
}

